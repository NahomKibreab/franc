{
  "name": "franc-www",
  "private": true,
  "license": "MIT",
  "repository": "wooorm/franc",
  "bugs": "https://github.com/wooorm/franc/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "dependencies": {
    "debounce": "^1.0.0",
    "franc": "^4.0.0"
  },
  "devDependencies": {
    "bail": "^1.0.2",
    "browserify": "^16.0.0",
    "concat-stream": "^2.0.0",
    "cssnano": "^4.0.0",
    "iso-639-3": "^1.0.0",
    "postcss-cli": "^6.0.0",
    "prettier": "^1.12.1",
    "rehype-cli": "^7.0.0",
    "rehype-preset-minify": "^3.0.0",
    "rehype-prevent-favicon-request": "^1.0.0",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "stylelint": "^10.0.0",
    "stylelint-config-standard": "^18.0.0",
    "tinyify": "^2.5.0",
    "xo": "^0.24.0"
  },
  "scripts": {
    "generate": "node build",
    "format": "remark . -qfo && prettier --write '**/*.js' && xo --fix && stylelint src/index.css --fix",
    "build:js": "browserify src/index.js -p tinyify > dest/index.js",
    "build:css": "postcss src/index.css > dest/index.css",
    "build:html": "rehype -u preset-minify -u prevent-favicon-request src -o dest",
    "build": "npm run build:js && npm run build:css && npm run build:html",
    "test": "npm run generate && npm run format && npm run build"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "no-var": "off",
      "prefer-arrow-callback": "off",
      "unicorn/prefer-node-append": "off"
    }
  },
  "postcss": {
    "plugins": {
      "cssnano": {
        "preset": "default"
      }
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
